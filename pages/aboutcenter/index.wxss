page {
  width: 100%;
  height: 100%;
  background: url(http://59.110.242.178/lxb-image/bg.jpg) no-repeat center top;
  background-size: cover;
  overflow: hidden;
  position: fixed;
  margin: 0px;
  /*下面的是关键的设置100%显示*/
  background-size: 100% 100%;
}

.about_body {
  width: 100%;
  height: 100%;
  padding-top:40rpx;
  box-sizing: border-box;
}

.title {
  font-size: 16px;
  color: #fff;
  text-align: center;
  display: block;
  line-height: 75rpx;
}

.about_text {
  height: 60vh;
  position: fixed;
  top: 30vh;
  width: 100%;
  padding: 0 80rpx;
  box-sizing: border-box;
  font-size: 14px;
  line-height: 45rpx;
}