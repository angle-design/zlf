page {
  width: 100%;
  height: 100%;
  background: url(https://satc.cscse.edu.cn/lxb-image/bg.jpg) no-repeat center top;
  background-size: cover;
  overflow: hidden;
  position: fixed;
  margin: 0px;
  /*下面的是关键的设置100%显示*/
  background-size: 100% 100%;
}

.about_body {
  width: 100%;
  height: 100%;
  padding-top:40rpx;
  box-sizing: border-box;
}

.title {
  font-size:32rpx;
  color: #fff;
  text-align: center;
  display: block;
  line-height: 75rpx;
}

.about_text {
  height: 60vh;
  position: fixed;
  top: 30vh;
  width: 100%;
  display:flex;
  justify-content: center;
  box-sizing: border-box;
  font-size:28rpx;
  line-height: 45rpx;
}
.about_text text{
  text-indent: 2rem;
  display: block;
  line-height:52rpx;
  padding: 0 80rpx;
}
.video{
  width:600rpx;
  height:340rpx;
  border-radius: 20rpx;
  overflow:hidden;
  margin:0 auto 30rpx;
  position: relative;

}
.video view{
  position: absolute;
  width:100rpx;
  height:100rpx;
  top:50%;
  margin-top:-50rpx;
  left:50%;
  margin-left:-50rpx
}
.video view image{
  width:100rpx;
  height:100rpx;
}
.code{
  width:600rpx;
  display: flex;
  flex-wrap: wrap;
  margin:0 auto;
}
.code view{
  width:300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:30rpx;
}
.code view image{
  width:200rpx;
  height:200rpx;
  background:#fff;
  border-radius: 20rpx;
  padding:10rpx;
  box-sizing: border-box;
  
}
.code view text{
  display: flex;
  padding:0;
  text-indent:0;
  font-size:24rpx;
  line-height:35rpx;
  text-align: center;
}