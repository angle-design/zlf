.itemschool{
  width:690rpx;
  height:214rpx;
  box-shadow:0rpx 0rpx 20rpx rgba(177,177,177,0.19);
  border-radius:20rpx;
  display: flex;
  align-items: center;
  background:#fff;
}
.itemschool image{
  width:180rpx;
  height:180rpx;
}
.itemschool .list_content{
  font-size:16px;
  color:#343434;
  display: flex;
  flex-direction: column;
}
.itemschool .list_content text:nth-child(2){
  font-size:13px;
  color:#878787;
  margin-top:5rpx;
}
.list_button{
  display: flex;
  margin-top:28rpx;
}
.list_button button{
  width:135rpx;
  height:46rpx;
  background:#ff9a2d;
  font-size:12px;
  color:#fff;
  margin-right:30rpx;
  line-height:46rpx;
}
.list_button button:nth-child(2){
  background:#4289f4;
}