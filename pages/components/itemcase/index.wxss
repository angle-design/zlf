 .caseitem {
  margin-bottom: 0.3rem;
  display: flex;
  padding: 16rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  align-items: center;
}

 .caseitem image {
  width: 152rpx;
  height: 192rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  opacity: 0.4;
  transition: opacity 0.2s linear 0.4s;
}
 
.caseitem  .Action {
  opacity: 1;
}
 .caseitem view {
  display: flex;
  flex-direction: column;
  width: 460rpx;
  font-size:26rpx;
  height: 100%;
  justify-content: flex-start;
  align-items: flex-start;
}

 .caseitem .name {
  font-size: 30rpx;
}

 .caseitem .text {
  margin: 10rpx 0 20rpx;
  height: 70rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

 .caseitem .school text {
  color: #4189f4;
  border-radius: 10rpx;
  border: 1px solid #4189f4;
  padding: 3rpx 15rpx;
  margin-bottom: 10rpx;
}

 .caseitem.active .school text{
  color: #ff9a2d;
  border-radius: 10rpx;
  border: 1px solid #ff9a2d;
}