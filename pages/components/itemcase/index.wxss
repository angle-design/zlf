 .caseitem {
  display: flex;
}

 .caseitem image {
  width: 152rpx;
  height: 192rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  opacity: 0.4;
  transition: opacity 0.2s linear 0.4s;
}
 
.caseitem  .Action {
  opacity: 1;
}
 .caseitem view {
  display: flex;
  flex-direction: column;
  width: 400rpx;
  font-size:28rpx;
  height: 100%;
  justify-content: flex-start;
}

 .caseitem .name {
  font-size: 32rpx;
  margin:15rpx 0 0;
}

 .caseitem .text {
  margin: 10rpx 0 20rpx;
  line-height:36rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

 .caseitem .school text {
  color: #4189f4;
  border-radius: 10rpx;
  border: 1rpx solid #4189f4;
  padding: 3rpx 15rpx;
  margin-bottom: 10rpx;
}

 .caseitem.active .school text{
  color: #ff9a2d;
  border-radius: 10rpx;
  border: 1rpx solid #ff9a2d;
}