<!--index.wxml-->
<view class="container">

	<view class="home_top" 
	style="background:#2D69DF url({{host}}bottom_02.jpg) no-repeat center bottom">
		<!-- 轮播图 -->
		<swiper class='swiper_body' bindchange="swiperChange" autoplay='true' interval='5000' duration='1000' circular='true'>
			<block wx:for="{{bnrUrl}}" wx:for-index="index">
				<swiper-item>
					<image src='{{imgpath+item.img}}' class='u-img-slide' mode='aspectFill'></image>
				</swiper-item>
			</block>
		</swiper>
		<view class="dots">
			<block wx:for="{{bnrUrl}}" wx:key-index="index">
				<view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
			</block>
		</view>
	</view>
	<!-- 分类 -->
	<view class="home_tab">
		<view wx:for="{{list}}" wx:for-item="listItem" wx:key-index="index" >
		<image src="{{host}}{{listItem.img}}" data-url="{{listItem.url}}" data-islog="{{listItem.islog}}" bindtap="gotopage"></image>
			<text>{{listItem.name}}</text>
		</view>
	</view>
	<!-- 列表 -->
	<view class="home_list">
		<view class="title">
			<text >项目院校</text>
			<view bindtap="gotoschool" >全部院校<image src="../../image/jian.png"></image>
			</view>
		</view>

		<!-- 左右滑动导航 -->
		<view class="list_tab">
		  <scroll-view scroll-x="true" class="nav" scroll-left="{{navScrollLeft}}" scroll-with-animation="true">
        <block wx:for="{{navData}}" wx:for-index="idx" wx:for-item="navItem" wx:key="idx">
            <view class="nav-item {{currentTab == idx ?'active':''}}"  data-current="{{idx}}" data-id="{{navItem.id}}" bindtap="switchNav">{{navItem.areaName}}</view>
        </block>        
    </scroll-view>
		</view>

		<!-- 学校列表 -->
    <view class="list_body">
      <view class="list_item" wx:for="{{schoollist}}" wx:for-index="index" wx:for-item="schoolItem">
					<itemschool item="{{schoolItem}}"></itemschool>
      </view>
    </view>
	</view>
</view>
