.zicun_con{
  width:750rpx;
  background:#fff;
  padding-bottom:40rpx;
  padding:40rpx 60rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position:relative
}

.zicun_con>view{
  display: flex;
  flex-direction: column;
  font-size:28rpx;
  margin-bottom:30rpx;
}
.zicun_con>view text text{
color:#f94947;
}
.zicun_con>view input,.zicun_con>view textarea,.zicun_con .leibie{
  width:630rpx;
  height:90rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  border:1px solid #bbb;
  margin-top: 10rpx;
  padding:20rpx;
}
.zicun_con .leibie {
  display: flex;
justify-content: space-between;
align-items: center;
}
.zicun_con .leibie image{
  width:13rpx;
  height:23rpx;
  transform:rotate(90deg);
}
.zicun_con>view textarea{
  height:240rpx;
}
.msg_con{
  display: flex;
  justify-content: space-between;
  margin-top:5rpx;
  font-size:24rpx;
  color:#999
}
.zicun_con button{
  width:580rpx;
  height:90rpx;
  border-radius:40rpx;
  background:#4189f3;
  color:#fff;
  margin-top:70rpx;
}
.leibie_pup{
  position: fixed;
  top:0;
  left:0;
  width:100vw;
  height:100vh;
  background:rgba(0,0,0,0.8);
  z-index:4;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  flex-direction: column;
  
  }
  .leibie_pup text{
    display: block;
    background: #fff;
    color:#333;
    height:90rpx;
    line-height:90rpx;
    width:100%;
    text-align: center;
    border-bottom:1px solid #f6f6f6;
  }