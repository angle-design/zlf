page {
  width: 100%;
  height: 100%;
  background: url(http://59.110.242.178/lxb-image/cibg.jpg) no-repeat center top;
  background-size: cover;
  overflow: hidden;
  position: fixed;
  margin: 0px;
  /*下面的是关键的设置100%显示*/
  background-size: 100% 100%;
}

.about_body {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.title {
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  display: block;
  line-height: 75rpx;
}

.about_text {
  height:90vh;
  width: 100%;
  padding:0;
  bottom:0;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 45rpx;
  background: #fff;
  padding:20rpx 0;
  box-sizing: border-box;
}
.about_text .collectlist{
  width:690rpx;
  padding-top:10rpx;
  margin:0 auto 20rpx;
}