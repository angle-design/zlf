page {
  width: 100%;
  height: 100%;
  background: url(http://59.110.242.178/lxb-image/cibg.jpg) no-repeat center top;
  background-size: cover;
  overflow: hidden;
  position: fixed;
  margin: 0px;
  /*下面的是关键的设置100%显示*/
  background-size: 100% 100%;
}

.about_body {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.title {
  font-size:32rpx;
  color: #fff;
  text-align: center;
  display: block;
  line-height: 75rpx;
}

.about_text {
  height:88vh;
  padding-bottom:60rpx;
  position: fixed;
  top: 12vh;
  width: 100%;
  padding:0;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 45rpx;
}
.about_text .item {
  width:630rpx;
  margin:0 auto 50rpx;
  position: relative;
}
.about_text .item image{
  width:630rpx;
  height:322rpx;
  border:2px solid #fff;
  border-radius:10px;
  box-sizing: border-box;
}
.about_text .item view{
  position:absolute;
  top:40rpx;
  left:0;
  border-radius:0 60rpx 60rpx 0;
  background:#FF9A2D ;
  color:#fff;
  text-align: center;
  width:200rpx;
  height:80rpx;
  font-size:40rpx;
  font-weight: bold;
  line-height: 80rpx;
}