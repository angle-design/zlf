/* pages/project/countries.wxss */
page{
  width: 100%;
  height: 100%;
  background: #413c72;
  overflow: hidden;
  position: fixed;
  margin: 0px;
  /*下面的是关键的设置100%显示*/
  background-size: 100% 100%;
}
.pagec{
  width: 100%;
  padding-top:500rpx;
  box-sizing: border-box;
  background: url(http://59.110.242.178/lxb-image/guobie_01.jpg) no-repeat center top;
  background-size: 100% 632rpx;
  display: block;
}
.countries{
  width:664rpx;
  border:1px solid #a46a68;
  border-radius:0.3rem;
  margin:0 auto;
  padding:0 15rpx 40rpx;
  box-sizing: border-box;
}
.content text{
  text-indent: 2rem;
  display: block;
  line-height:52rpx;
  padding: 0 20rpx;
  color:#fff;
  font-size: 28rpx;
  margin-top: 40rpx;
}