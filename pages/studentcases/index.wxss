/* pages/studentcases/index.wxss */
.studentcases {
  padding: 45rpx 30rpx 0;
}

.studentcases .caseitem {
  margin-bottom: 0.3rem;
  display: flex;
  padding: 16rpx;
  border-radius: 20rpx;
  background: #e7f2ff;
  margin-bottom: 30rpx;
  align-items: center;
}
.studentcases .caseitem:nth-child(even){
  background:#fff3e7;
}
.studentcases .caseitem image {
  width: 157rpx;
  height: 193rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 10rpx;
}

.studentcases .caseitem view {
  display: flex;
  flex-direction: column;
  width: 600rpx;
  font-size: 13px;
  height: 100%;
  justify-content: flex-start;
  align-items: flex-start;
}

.studentcases .caseitem .name {
  font-size: 15px;
}

.studentcases .caseitem .text {
  margin: 10rpx 0 20rpx;
  height: 60rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.studentcases .caseitem .school text {
  color: #4189f4;
  border-radius: 10rpx;
  border: 1px solid #4189f4;
  padding: 3rpx 15rpx;
  margin-bottom: 10rpx;
}
.studentcases .caseitem:nth-child(even) .school text{
  color: #ff9a2d;
  border-radius: 10rpx;
  border: 1px solid #ff9a2d;
}