<!--pages/contact/contact.wxml-->
<navigationBar toptextcolor="#333" topbackground="#fff" inner-title="北京大学" is-show-back="true"></navigationBar>
<view style="position:relative">

  <view class="cantact_top">
    <view bindtap="towei"><image src="{{host}}xi_03.png"></image><text>加微信</text></view>
    <view bindtap="freeTell"><image src="{{host}}xi_01.png"></image><text>打电话</text></view>
    <view bindtap="tozixun"><image src="{{host}}xi_02.png"></image><text>联系我</text></view>
  </view>
	<scroll-view scroll-y scroll-with-animation="{{scrollAnimation}}"  bindscrolltoupper="scroll_scroll" scroll-into-view='{{toView}}' style='height: {{scrollHeight}};padding-top:15vh;box-sizing:border-box;'>
     
  	<!-- <view class='scrollMsg'> -->
		<block wx:key wx:for='{{msgList}}' wx:for-index="index">
			<!-- 单个消息1 客服发出（左） -->
			<view wx:if='{{item.speaker=="server"}}' id='msg-{{index}}' class="leftview">
        <text>{{item.uname}}</text>
				<view class="lefthead" >
					<image src="{{item.uimg}}"></image>
				</view>
				<view class='leftMsg'>{{item.content}}</view>
			</view>
      <view wx:elif='{{item.speaker=="time"}}' id='msg-{{index}}' >
      <wxs module="utils" src="../../utils/utils.wxs"></wxs>
      <text class="totime">{{utils.fftime(item.content)}}</text>
      </view>
			<!-- 单个消息2 用户发出（右） -->
			<view wx:else id='msg-{{index}}' class="rightview">
        <text>{{item.uname}}</text> 
				<view class='rightMsg'>{{item.content}}</view>
				<view class="righthead">
					<image src="{{item.uimg}}"></image>
				</view>
			</view>
		</block>
		<!-- </view> -->
   
		<!-- 占位 -->
		<view style='width: 100%; height: 18vw;'></view>
	</scroll-view>
  <!-- 输入框 -->
	<view class='inputRoom' style='bottom: {{inputBottom}}'>
		<input bindconfirm='submitTo' bindinput="bindKeyInput" adjust-position='{{false}}' value='{{inputValue}}' confirm-type='send' bindfocus='focus' bindblur='blur'></input>
    <text bindtap="submitTo">发送</text>
	</view>
</view>
<!-- 咨询弹窗 -->
<view class="zixun_pup" wx:if="{{zixunflag}}">
  <view class="zicun_con">
   <image src="{{host}}close.png" bindtap="closezixun"></image>
    <text class="pup_title">请留下您的信息</text>
    <view>
        <text><text>*</text>姓名</text>
        <input type="text"></input>  
    </view>
     <view>
        <text><text>*</text>电话</text>
        <input type="number"></input>  
    </view>
     <view>
        <text><text>*</text>咨询事宜</text>
        <textarea bindinput="inputText"></textarea> 
        <view class="msg_con"><text class="error">请完整、正确的填写信息</text><text class="word_no">{{number}}/500</text></view>
    </view>
    <button>确定</button>
  </view>
</view>
  
  <!-- 微信弹窗二维码 -->
  <view class="wei_pup" wx:if="{{weiflag}}">
    <view class="wei_con">
       <image src="{{host}}close.png"  bindtap="closewei"></image>
      <text class="pup_title">请扫描二维码添加微信</text>
      <view>
        <image src="https://dss2.bdstatic.com/70cFvnSh_Q1YnxGkpoWK1HF6hhy/it/u=810988444,1648289218&fm=111&gp=0.jpg"></image>
        <text>微信号:wangxiaowen</text>
      </view>
      <button bindtap="{{weiflag==false}}">保存图片</button>
    </view>
  </view>